{
  "name": "ldy-token",
  "version": "1.0.0",
  "scripts": {
    "cc:test": "forge test -vvv --use 0.8.20",
    "cc:slither:report": "slither . --compile-force-framework hardhat --checklist > report.md ",
    "cc:slither:triage": "slither . --compile-force-framework hardhat --triage-mode",
    "cc:slither:pausable": "slither . --compile-force-framework hardhat --print not-pausable",
    "cc:node": "hardhat node --hostname 0.0.0.0",
    "cc:compile": "hardhat compile && hardhat export --export-all contracts/deployments.json && ts-node"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-verify": "^2.0.3",
    "@openzeppelin/contracts": "^5.0.1",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "hardhat": "^2.19.4",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-deploy": "^0.11.45",
    "prettier": "^3.1.1",
    "prettier-plugin-solidity": "^1.3.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
